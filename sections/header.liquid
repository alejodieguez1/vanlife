{% assign settings = section.settings %}

<site-header>
  <div class="fixed z-50 left-0 right-0">
    {% unless section.settings.announcement_text == blank %}
      {% render 'announcement-bar'
        , text: settings.announcement_text %}
    {% endunless %}
    <div class="site-header lg:py-10 flex items-center py-7 transition-all duration-500 text-white">
      <div class="site-container flex justify-between relative items-center">
        <div class="lg:hidden">
          <button class="menu-toggle group grid gap-1 content-center h-full">
            <span class="bg-white w-10 h-[2px] flex transform transition duration-500 origin-center group-[.active]:rotate-45 group-[.active]:translate-y-[0.15rem]"></span>
            <span class="bg-white w-10 h-[2px] flex transform transition duration-500 origin-center group-[.active]:-rotate-45 group-[.active]:-translate-y-[0.25rem]"></span>
          </button>
        </div>
        <div class="items-center gap-6 hidden lg:flex">
          {% for link in settings.menu.links %}
            <a href="{{ link.url }}" class="group relative inline-block text-sm font-body-medium uppercase transition-all duration-500">
              {{ link.title }}
              <span class="absolute bottom-0 left-0 h-[1px] w-0 bg-current transition-all duration-500 group-hover:w-full"></span>
            </a>
          {% endfor %}
        </div>
        <div class="w-16 lg:w-24 absolute left-1/2 -translate-x-1/2">
          <a
            href="/"
            class="block"
            aria-label="Logo">
            <span class="sr-only">Shop Logo</span>
            {% render 'logo' %}</a>
        </div>
        <button class="lg:hover:opacity-50 lg:transition-all lg:duration-500">{% render 'icon-cart' %}</button>
      </div>
    </div>
  </div>
  {% render 'mobile-menu'
    , menus: section.settings.menu
    , cta_url: settings.cta_url
    , cta_text: settings.cta_text
  %}
</site-header>

