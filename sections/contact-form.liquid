<div class="site-container grid content-start gap-10 py-10 lg:py-8 lg:grid-cols-[0.75fr_1fr]">
  <img
    src="{{ section.settings.image | image_url }}"
    alt="{{ section.settings.image.alt }}"
    width="auto"
    height="auto"
    class="justify-self-center lg:justify-self-start lg:h-full lg:object-cover rounded-[2.625rem]">
  {% form 'contact'
    , class: 'h-full'
    , id: "contact_form" %}
    {{ form.errors | default_errors }}
    {% unless form.posted_successfully? %}
      <div class="grid content-start gap-6">
        <h1 class="h3 h3--bold lg:text-[3.625rem] lg:leading-none text-purple md:max-w-xl">{{ section.settings.title }}</h1>
        {% unless section.settings.description == blank %}
          <p class="text-gray-500 md:max-w-xl">{{ section.settings.description }}</p>
        {% endunless %}
        <div class="grid gap-6 content-start bg-gray-bg border border-blue-200 p-6 lg:p-8 rounded-[2.625rem]">
          <h4 class="h4 b4--bold lg:text-[1.75rem] leading-none max-w-[200px] md:max-w-none">We'd love to hear from you</h4>
          <div class="grid content-start gap-5 lg:gap-4">
            <div class="grid content-start gap-5 lg:gap-4 lg:grid-cols-2">
              <div class="grid">
                <label for="name" class="text-base text-gray-500 pl-3">Your Full Name*</label>
                <div class="flex items-center gap-3 px-4 bg-white rounded-xl border border-blue-200 focus:border-blue-400">
                  <div class="text-gray-500">{% render 'icon-account' %}</div>
                  <input
                    type="text"
                    id="name"
                    name="contact[name]"
                    autocomplete="name"
                    placeholder="John Doe"
                    class="bg-transparent w-full h-14 focus-visible:outline-none"
                    required />
                </div>
              </div>
              <div class="grid">
                <label for="email" class="text-base text-gray-500 pl-3">Your Email*</label>
                <div class="flex items-center gap-3 px-4 bg-white rounded-xl border border-blue-200">
                  <div class="text-gray-500">{% render 'icon-mail' %}</div>
                  <input
                    type="email"
                    id="email"
                    name="contact[email]"
                    autocomplete="email"
                    placeholder="j.doe@mail.com"
                    class="bg-transparent w-full h-14 focus-visible:outline-none"
                    required />
                </div>
              </div>
            </div>
            <div class="grid">
              <label for="message" class="text-base text-gray-500 pl-3">Message*</label>
              <div class="flex items-center gap-3 px-4 bg-white rounded-xl border border-blue-200">
                <textarea
                  id="message"
                  name="contact[body]"
                  placeholder="Write something"
                  class="bg-transparent w-full h-32 focus-visible:outline-none pt-2"
                  required></textarea>
              </div>
            </div>
            <div class="grid lg:justify-items-end">
              <button type="submit" class="button lg:w-fit">Send Message</button>
            </div>
          </div>
        </div>
      </div>
    {% endunless %}
    {% if form.posted_successfully? %}
      <div class="h-full bg-white border border-blue-200 rounded-[2.625rem] flex flex-col items-center justify-center gap-6 text-center px-6 lg:px-8">
        {% render 'icon-success' %}
        <h4 class="h4 h4--bold">Thanks For Contacting Us!</h4>
        <p>We’ll be in touch soon.</p>
      </div>
    {% endif %}
  {% endform %}
</div>

{% schema %}
  {
    "name": "Contact Form",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }, {
        "type": "text",
        "id": "title",
        "label": "Title"
      }, {
        "type": "text",
        "id": "description",
        "label": "Description"
      }
    ],
    "presets": [
      {
        "name": "Contact Form",
        "settings": {
          "image": "shopify://shop_images/teamwork-group-young-artists_1_2.png",
          "title": "We're always happy to help you!",
          "description": "Our US-based team is ready to assist you with any inquiry, no matter how big or small. Don’t hesitate to send us your questions or comments using the form below."
        }
      }
    ]
  }
{% endschema %}