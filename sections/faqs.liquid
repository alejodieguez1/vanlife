<div class="site-container py-10">
  <div class="grid content-start gap-12 lg:max-w-[800px] mx-auto">
    <div class="grid content-start text-center">
      <h2 class="h4 lg:text-[2.875rem] text-teal">{{ section.settings.title }}</h2>
      <p class="text-lg">{{ section.settings.pretitle }}</p>
    </div>
    <div class="grid gap-4">
      {% for block in section.blocks %}
        <accordion-item class="border border-teal rounded-xl p-3 lg:p-6">
          <details>
            <summary class="flex justify-between items-center w-full">
              <h3 class="font-heading">{{ block.settings.question }}</h3>
              <div class="flex">{% render 'icon-down' %}</div>
            </summary>
            <div class="content transition-all duration-300">
              <div class="pt-6"></div>
              {{ block.settings.answer }}
            </div>
          </details>
        </accordion-item>
      {% endfor %}
    </div>
  </div>
</div>

