{% assign settings = section.settings %}

<div class="grid gap-8 relative h-screen" style="color: {{ settings.text_color }};">
  <div class="grid site-container relative z-20">
    <div class="grid content-center gap-5">
      <h2 class="h2 max-w-[650px]">{{ settings.title }}</h2>
      {% unless settings.description == blank %}
        <p class="text-sm lg:text-lg max-w-[28rem]">{{ settings.description }}</p>
      {% endunless %}

      {% unless settings.cta_text == blank or settings.cta_url == blank %}
        {% render 'button'
          , button_text: settings.cta_text
          , button_url: settings.cta_url
          , button_class: 'grass'
          , custom_class: 'sm:max-w-[700px]' %}
      {% endunless %}

      <countdown-timer data-end-date="{{ '2025-07-01T00:00:00Z' }}">
        <div class="grid gap-2">
          <div class="text-2xl font-body-bold">
            Giveaway ends in:
          </div>
          <div class="timer flex gap-5 text-4xl">
            <div class="text-center bg-black bg-opacity-25 rounded-lg p-2 w-fit">
              <div data-role="days">--</div>
              <div class="text-xs mt-1">Days</div>
            </div>
            <div class="text-center bg-black bg-opacity-25 rounded-lg p-2 w-fit">
              <div data-role="hours">--</div>
              <div class="text-xs mt-1">Hours</div>
            </div>
            <div class="text-center bg-black bg-opacity-25 rounded-lg p-2 w-fit">
              <div data-role="minutes">--</div>
              <div class="text-xs mt-1">Minutes</div>
            </div>
            <div class="text-center bg-black bg-opacity-25 rounded-lg p-2 w-fit">
              <div data-role="seconds">--</div>
              <div class="text-xs mt-1">Seconds</div>
            </div>
          </div>
        </div>
      </countdown-timer>

    </div>
  </div>
  {% render 'media-component'
    , video_mobile: section.settings.video_mobile
    , video_desktop: section.settings.video_desktop
    , desktop_image: section.settings.bg_desktop
    , mobile_image: section.settings.bg_mobile %}
  <div class="bg-black bg-opacity-25 absolute top-0 left-0 right-0 w-full h-full"></div>
</div>

